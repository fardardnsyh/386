---
import MainLayout from "../layouts/Main.astro";

const { icon, wideIcon, title, pageTitle, message, showBackground, noindex, submissionID } = Astro.props;
---

<MainLayout title={pageTitle} noindex={noindex}>
    <main>
        <div class="message-content">
            <div class="icon" data-background={showBackground || "true"} data-wide={wideIcon || "false"}>
                <Fragment set:html={icon} />
            </div>
            <h1>{title}</h1>
            <p>{message}</p>
            <a href="/">
                <button>Go home</button>
            </a>
            { submissionID && <a href={`/contact/submission/${submissionID}`} class="email-submission-link">View or remove your submission</a> }
        </div>
    </main>
</MainLayout>

<style lang="scss">
    main {
        padding-top: 4rem;
        box-sizing: border-box;
        height: 100%;
        .message-content {
            width: var(--section-width);
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            .icon {
                width: 6rem;
                height: auto;
                display: grid;
                place-content: center;
    
                :global(svg) {
                    display: block;
                    width: 100%;
                    fill: var(--accent);
                    path { 
                        height: 100%;
                    }
                }
                &[data-background="true"] {
                    background-color: var(--accent);
                    border-radius: 50%;
                    padding: 1.25rem;
                    box-sizing: border-box;
                    height: 6rem;
                    :global(svg) {
                        fill: var(--accent-foreground);
                    }
                }
                &[data-wide="true"] {
                    width: 12rem;
                }
            }
    
            
            h1 {
                font-size: 5rem;
                margin: 1.5rem 0 0.5rem 0;
                text-align: center;
                word-break: break-word;
                line-height: 1.2;
            }
    
            p {
                font-size: 1.5rem;
                margin: 0;
                text-align: center;
            }
    
            > a {
                text-decoration: none;
                margin-top: 1.5rem;
                &.email-submission-link {
                    color: var(--accent);
                    text-decoration: underline;
                }
                button {
                    padding: 0.5em 1em;
                    border: none;
                    border-radius: 0.5rem;
                    font-size: 1.25rem;
                    font-family: inherit;
                    cursor: pointer;
                    font-weight: 600;
                    border: 0.1rem solid var(--foreground-1);
                    background: none;
                    color: var(--foreground-1);
                    border-radius: 100vh;
                    transition: border 0.5s;
                    transition: color 0.5s;
                    transition: background 0.5s;
                    &:focus {
                        outline: 0.1rem solid var(--accent);
                    }
                    
                    &:hover {
                        border-color: var(--accent);
                        background-color: var(--accent);
                        color: var(--accent-foreground);
                    }
                }
            }
        }
    }

    @media screen and (max-width: 768px){
        main {
            .message-content {
                h1 {
                    font-size: 3rem;
                }
            }
        }
    }
</style>